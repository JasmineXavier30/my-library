<h2><%= author.name %></h2>
<a href="/authors/<%= author.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', {url: `/authors/${author.id}`})  %>

<% if(books && books.length > 0) {  %>
    <h2>Books By Author</h2>
    <% books.forEach(book => { %>
        <img src="<%= book.imgPath %>" width="100" height="150" alt="Book Cover">
    <% }); %>
<% } %>
